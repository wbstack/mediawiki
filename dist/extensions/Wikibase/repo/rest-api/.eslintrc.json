{
	"root": true,
	"extends": "wikimedia",
	"ignorePatterns": [
		"*.json",
		"node_modules/",
		"vendor",
		"dist/",
		"docs/",
		".redocly.lint-ignore.yaml"
	],
	"rules": {
		"max-len": [ "warn", { "code":  130 } ],
		"no-unused-expressions": "off",
		"prefer-arrow-callback": "off",
		"template-curly-spacing": "off",
		"camelcase": "off",
		"no-implicit-coercion": [ "error", { "disallowTemplateShorthand": true } ]
	}
}
