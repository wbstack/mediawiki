{
	"get": {
		"operationId": "getItemDescriptions",
		"tags": [ "descriptions" ],
		"summary": "Retrieve an Item's descriptions",
		"parameters": [
			{ "$ref": "../../global/parameters.json#/ItemId" },
			{ "$ref": "../../global/parameters.json#/IfNoneMatch" },
			{ "$ref": "../../global/parameters.json#/IfModifiedSince" },
			{ "$ref": "../../global/parameters.json#/IfMatch" },
			{ "$ref": "../../global/parameters.json#/IfUnmodifiedSince" },
			{ "$ref": "../../global/parameters.json#/Authorization" }
		],
		"responses": {
			"200": { "$ref": "./responses.json#/ItemDescriptions" },
			"304": { "$ref": "../../global/responses.json#/NotModified" },
			"308": { "$ref": "../../global/responses.json#/MovedPermanently" },
			"400": { "$ref": "../../global/responses.json#/InvalidEntityIdInput" },
			"404": { "$ref": "../../global/responses.json#/ResourceNotFound" },
			"412": { "$ref": "../../global/responses.json#/PreconditionFailedError" },
			"500": { "$ref": "../../global/responses.json#/UnexpectedError" }
		}
	},
	"patch": {
		"operationId": "patchItemDescriptions",
		"tags": [ "descriptions" ],
		"summary": "Change an Item's descriptions",
		"parameters": [
			{ "$ref": "../../global/parameters.json#/ItemId" },
			{ "$ref": "../../global/parameters.json#/IfMatch" },
			{ "$ref": "../../global/parameters.json#/IfNoneMatch" },
			{ "$ref": "../../global/parameters.json#/IfUnmodifiedSince" }
		],
		"requestBody": {
			"description": "Payload containing a JSON Patch document to be applied to an Item's descriptions and edit metadata",
			"required": true,
			"content": {
				"application/json-patch+json": {
					"schema": { "$ref": "../../global/request-parts.json#/PatchRequest" },
					"example": { "$ref": "./examples.json#/PatchItemDescriptions" }
				},
				"application/json": {
					"schema": { "$ref": "../../global/request-parts.json#/PatchRequest" },
					"example": { "$ref": "./examples.json#/PatchItemDescriptions" }
				}
			}
		},
		"responses": {
			"200": { "$ref": "./responses.json#/ItemDescriptions" },
			"400": { "$ref": "../../global/responses.json#/InvalidPatch" },
			"403": { "$ref": "../../global/responses.json#/PermissionDenied" },
			"404": { "$ref": "../../global/responses.json#/ResourceNotFound" },
			"409": { "$ref": "../../global/responses.json#/CannotApplyItemPatch" },
			"412": { "$ref": "../../global/responses.json#/PreconditionFailedError" },
			"422": { "$ref": "../../global/responses.json#/InvalidPatchedDescriptions" },
			"429": { "$ref": "../../global/responses.json#/RequestLimitReached" },
			"500": { "$ref": "../../global/responses.json#/UnexpectedError" }
		}
	}
}
